@page "/typeofworks/edit"
@using Microsoft.EntityFrameworkCore
@using BlazorAppScaffold.Models
@inject IDbContextFactory<BlazorAppScaffold.Data.BlazorAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>TypeOfWork</h2>
<hr />
@if (TypeOfWork is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="TypeOfWork" OnValidSubmit="UpdateTypeOfWork" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="TypeOfWork.Id" value="@TypeOfWork.Id" />
                <div class="mb-3">
                    <label for="typeofwork1" class="form-label">TypeOfWork1:</label>
                    <InputText id="typeofwork1" @bind-Value="TypeOfWork.TypeOfWork1" class="form-control" />
                    <ValidationMessage For="() => TypeOfWork.TypeOfWork1" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/typeofworks">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private TypeOfWork? TypeOfWork { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        TypeOfWork ??= await context.TypeOfWorks.FirstOrDefaultAsync(m => m.Id == Id);

        if (TypeOfWork is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateTypeOfWork()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(TypeOfWork!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!TypeOfWorkExists(TypeOfWork!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/typeofworks");
    }

    private bool TypeOfWorkExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.TypeOfWorks.Any(e => e.Id == id);
    }
}
