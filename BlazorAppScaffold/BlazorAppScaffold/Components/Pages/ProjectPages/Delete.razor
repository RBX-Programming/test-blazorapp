@page "/projects/delete"
@using Microsoft.EntityFrameworkCore
@using BlazorAppScaffold.Models
@inject IDbContextFactory<BlazorAppScaffold.Data.BlazorAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Project</h2>
    <hr />
    @if (project is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Id</dt>
            <dd class="col-sm-10">@project.Id</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@project.Date</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@project.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">BranchId</dt>
            <dd class="col-sm-10">@project.BranchId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ProjectStatusId</dt>
            <dd class="col-sm-10">@project.ProjectStatusId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ClientShortName</dt>
            <dd class="col-sm-10">@project.ClientShortName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ManufacturerId</dt>
            <dd class="col-sm-10">@project.ManufacturerId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LocationId</dt>
            <dd class="col-sm-10">@project.LocationId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">StartDate</dt>
            <dd class="col-sm-10">@project.StartDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">FinishDate</dt>
            <dd class="col-sm-10">@project.FinishDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Models</dt>
            <dd class="col-sm-10">@project.Models</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Plcs</dt>
            <dd class="col-sm-10">@project.Plcs</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Robots</dt>
            <dd class="col-sm-10">@project.Robots</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Revenue</dt>
            <dd class="col-sm-10">@project.Revenue</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ProjectOwner</dt>
            <dd class="col-sm-10">@project.ProjectOwner</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ProjectManager</dt>
            <dd class="col-sm-10">@project.ProjectManager</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ProjectTypeId</dt>
            <dd class="col-sm-10">@project.ProjectTypeId</dd>
        </dl>
        <EditForm method="post" Model="project" OnValidSubmit="DeleteProject" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(project is null)">Delete</button> |
            <a href="/projects">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Project? project;

    [SupplyParameterFromQuery]
    private string ProjectName { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        project = await context.Projects.FirstOrDefaultAsync(m => m.ProjectName == ProjectName);

        if (project is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteProject()
    {
        using var context = DbFactory.CreateDbContext();
        context.Projects.Remove(project!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/projects");
    }
}
