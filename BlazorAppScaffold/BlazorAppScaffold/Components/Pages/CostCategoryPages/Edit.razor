@page "/costcategories/edit"
@using Microsoft.EntityFrameworkCore
@using BlazorAppScaffold.Models
@inject IDbContextFactory<BlazorAppScaffold.Data.BlazorAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>CostCategory</h2>
<hr />
@if (CostCategory is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="CostCategory" OnValidSubmit="UpdateCostCategory" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="CostCategory.Id" value="@CostCategory.Id" />
                <div class="mb-3">
                    <label for="costcategory1" class="form-label">CostCategory1:</label>
                    <InputText id="costcategory1" @bind-Value="CostCategory.CostCategory1" class="form-control" />
                    <ValidationMessage For="() => CostCategory.CostCategory1" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/costcategories">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private CostCategory? CostCategory { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        CostCategory ??= await context.CostCategories.FirstOrDefaultAsync(m => m.Id == Id);

        if (CostCategory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateCostCategory()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(CostCategory!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!CostCategoryExists(CostCategory!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/costcategories");
    }

    private bool CostCategoryExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.CostCategories.Any(e => e.Id == id);
    }
}
