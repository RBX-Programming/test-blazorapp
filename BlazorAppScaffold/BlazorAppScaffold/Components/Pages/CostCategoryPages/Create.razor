@page "/costcategories/create"
@using Microsoft.EntityFrameworkCore
@using BlazorAppScaffold.Models
@inject IDbContextFactory<BlazorAppScaffold.Data.BlazorAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>CostCategory</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="CostCategory" OnValidSubmit="AddCostCategory" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="costcategory1" class="form-label">CostCategory1:</label> 
                <InputText id="costcategory1" @bind-Value="CostCategory.CostCategory1" class="form-control" /> 
                <ValidationMessage For="() => CostCategory.CostCategory1" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/costcategories">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private CostCategory CostCategory { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddCostCategory()
    {
        using var context = DbFactory.CreateDbContext();
        context.CostCategories.Add(CostCategory);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/costcategories");
    }
}
