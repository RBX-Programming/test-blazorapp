@page "/paymentstatuses/delete"
@using Microsoft.EntityFrameworkCore
@using BlazorAppScaffold.Models
@inject IDbContextFactory<BlazorAppScaffold.Data.BlazorAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>PaymentStatus</h2>
    <hr />
    @if (paymentstatus is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@paymentstatus.Status</dd>
        </dl>
        <EditForm method="post" Model="paymentstatus" OnValidSubmit="DeletePaymentStatus" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(paymentstatus is null)">Delete</button> |
            <a href="/paymentstatuses">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private PaymentStatus? paymentstatus;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        paymentstatus = await context.PaymentStatuses.FirstOrDefaultAsync(m => m.Id == Id);

        if (paymentstatus is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePaymentStatus()
    {
        using var context = DbFactory.CreateDbContext();
        context.PaymentStatuses.Remove(paymentstatus!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/paymentstatuses");
    }
}
