@page "/expenses"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using BlazorAppScaffold.Models
@using BlazorAppScaffold.Data
@implements IAsyncDisposable
@inject IDbContextFactory<BlazorAppScaffold.Data.BlazorAppContext> DbFactory
@rendermode InteractiveServer

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="expenses/create">Create New</a>
</p>

<QuickGrid Class="table" Items="FilteredExpenses">
    <PropertyColumn Property="expense => expense.ProjectName" Sortable="true">
        <ColumnOptions>
            <div>
                <input type="search" autofocus @bind="expenseFilter" @bind:event="oninput" />
            </div>
        </ColumnOptions>
    </PropertyColumn>
    <PropertyColumn Property="expense => expense.Comments" />
    <PropertyColumn Property="expense => expense.BranchId" />
    <PropertyColumn Property="expense => expense.ValidatorId" />
    <PropertyColumn Property="expense => expense.RequesterId" />
    <PropertyColumn Property="expense => expense.CostTypesId" />
    <PropertyColumn Property="expense => expense.CostCategoriesId" />
    <PropertyColumn Property="expense => expense.DepartmentsId" />
    <PropertyColumn Property="expense => expense.Date" />
    <PropertyColumn Property="expense => expense.PaymentTerms" />
    <PropertyColumn Property="expense => expense.DueDate" />
    <PropertyColumn Property="expense => expense.Cost" />
    <PropertyColumn Property="expense => expense.CurrencyType" />
    <PropertyColumn Property="expense => expense.ExchangeRate" />
    <PropertyColumn Property="expense => expense.NetEuro" />
    <PropertyColumn Property="expense => expense.Vat" />
    <PropertyColumn Property="expense => expense.VatEuro" />
    <PropertyColumn Property="expense => expense.Total" />
    <PropertyColumn Property="expense => expense.Uploaded" />
    <PropertyColumn Property="expense => expense.Paid" />
    <PropertyColumn Property="expense => expense.PaymentDate" />

    <TemplateColumn Context="expense">
        <a href="@($"expenses/edit?id={expense.Id}")">Edit</a> |
        <a href="@($"expenses/details?id={expense.Id}")">Details</a> |
        <a href="@($"expenses/delete?id={expense.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>


@code {
    private BlazorAppContext context = default!;
    string expenseFilter = string.Empty;
    IQueryable<Expense> FilteredExpenses => context.Expenses.Where(expense => expense.ProjectName.Contains(expenseFilter));
    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }
    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}