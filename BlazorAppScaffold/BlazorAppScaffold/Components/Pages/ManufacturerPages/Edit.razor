@page "/manufacturers/edit"
@using Microsoft.EntityFrameworkCore
@using BlazorAppScaffold.Models
@inject IDbContextFactory<BlazorAppScaffold.Data.BlazorAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Manufacturer</h2>
<hr />
@if (Manufacturer is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Manufacturer" OnValidSubmit="UpdateManufacturer" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Manufacturer.Id" value="@Manufacturer.Id" />
                <div class="mb-3">
                    <label for="manufacturername" class="form-label">ManufacturerName:</label>
                    <InputText id="manufacturername" @bind-Value="Manufacturer.ManufacturerName" class="form-control" />
                    <ValidationMessage For="() => Manufacturer.ManufacturerName" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/manufacturers">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Manufacturer? Manufacturer { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Manufacturer ??= await context.Manufacturers.FirstOrDefaultAsync(m => m.Id == Id);

        if (Manufacturer is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateManufacturer()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Manufacturer!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!ManufacturerExists(Manufacturer!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/manufacturers");
    }

    private bool ManufacturerExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Manufacturers.Any(e => e.Id == id);
    }
}
