@page "/rfqstatuses/edit"
@using Microsoft.EntityFrameworkCore
@using BlazorAppScaffold.Models
@inject IDbContextFactory<BlazorAppScaffold.Data.BlazorAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>RfqStatus</h2>
<hr />
@if (RfqStatus is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="RfqStatus" OnValidSubmit="UpdateRfqStatus" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="RfqStatus.Id" value="@RfqStatus.Id" />
                <div class="mb-3">
                    <label for="rfqstatus1" class="form-label">RfqStatus1:</label>
                    <InputText id="rfqstatus1" @bind-Value="RfqStatus.RfqStatus1" class="form-control" />
                    <ValidationMessage For="() => RfqStatus.RfqStatus1" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/rfqstatuses">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private RfqStatus? RfqStatus { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        RfqStatus ??= await context.RfqStatuses.FirstOrDefaultAsync(m => m.Id == Id);

        if (RfqStatus is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateRfqStatus()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(RfqStatus!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!RfqStatusExists(RfqStatus!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/rfqstatuses");
    }

    private bool RfqStatusExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.RfqStatuses.Any(e => e.Id == id);
    }
}
